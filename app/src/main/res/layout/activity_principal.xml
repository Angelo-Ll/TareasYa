<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".presentacion.pantallaPrincipal.PrincipalActivity">

    <!-- Barra de búsqueda simplificada -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/buscar_tareas"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawableTint="#757575"
        android:padding="12dp"
        android:textSize="16sp" />

    <!-- Categorías -->
    <TextView
        android:id="@+id/tvCategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/categorias"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <!-- Botones de categorías simples -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp">

        <Button
            android:id="@+id/btnPersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categoria_personal"
            android:backgroundTint="#2196F3"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnTrabajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categoria_trabajo"
            android:backgroundTint="#E0E0E0"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnEstudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categoria_estudio"
            android:backgroundTint="#E0E0E0" />
    </LinearLayout>

    <!-- Lista simple de tareas -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:id="@+id/llTareas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tarea 1 - Ejemplo estático  -->
            <include
                layout="@layout/item_tarea_chat"
                android:id="@+id/tarea1" />

            <!-- Tarea 2 -->
            <include
                layout="@layout/item_tarea_chat"
                android:id="@+id/tarea2" />

            <!-- Tarea 3 -->
            <include
                layout="@layout/item_tarea_chat"
                android:id="@+id/tarea3" />

        </LinearLayout>
    </ScrollView>

    <!-- Botón agregar -->
    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/agregar_tarea"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="#2196F3"
        android:padding="16dp" />

</LinearLayout>