<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemTarea"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Fila superior: Nombre + Hora -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Nombre de la tarea -->
        <TextView
            android:id="@+id/tvNombreTarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ir al supermercado"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- Hora -->
        <TextView
            android:id="@+id/tvHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:46 a.m."
            android:textSize="12sp"
            android:textColor="#757575" />

    </LinearLayout>

    <!-- Fila media: Descripción breve -->
    <TextView
        android:id="@+id/tvDescripcionBreve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comprar leche, huevos, pan y frutas..."
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Fila inferior: Categoría + Contacto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <!-- Categoría -->
        <TextView
            android:id="@+id/tvCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal"
            android:textSize="12sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="#E3F2FD"
            android:textColor="#2196F3" />

        <!-- Espacio flexible -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Contacto o info adicional -->
        <TextView
            android:id="@+id/tvContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oscar Gonzales +51 997 262213"
            android:textSize="12sp"
            android:textColor="#9E9E9E" />

    </LinearLayout>

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        android:layout_marginTop="12dp" />

</LinearLayout>