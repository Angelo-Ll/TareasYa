<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_marginTop="30dp"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".presentacion.administradorVistas.AgregarTareaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título de la pantalla -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/agregar_tarea"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Título de la tarea -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_tarea"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_titulo"
            android:textSize="16sp"
            android:padding="12dp"
            android:backgroundTint="#BDBDBD"            android:layout_marginBottom="24dp" />

        <!-- Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descripcion"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="@string/hint_descripcion"
            android:textSize="16sp"
            android:padding="12dp"
            android:backgroundTint="#BDBDBD"            android:gravity="top"
            android:layout_marginBottom="24dp"
            android:inputType="textMultiLine" />

        <!-- Categoría -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/categoria"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#BDBDBD"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Fecha -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fecha"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seleccionar fecha"
            android:textSize="16sp"
            android:padding="12dp"
            android:backgroundTint="#BDBDBD"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:clickable="true"
            android:focusable="false"
            android:cursorVisible="false"
            android:inputType="none"
            android:layout_marginBottom="24dp" />

        <!-- Hora -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hora"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seleccionar hora"
            android:textSize="16sp"
            android:padding="12dp"
            android:backgroundTint="#BDBDBD"
            android:drawableEnd="@drawable/ic_clock"
            android:clickable="true"
            android:focusable="false"
            android:cursorVisible="false"
            android:inputType="none"
            android:layout_marginBottom="24dp" />

        <!-- Prioridad -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prioridad"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerPrioridad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#BDBDBD"
            android:padding="12dp"
            android:layout_marginBottom="32dp" />

        <!-- Línea divisoria -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="32dp" />

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardarTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guardar_tarea"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#2196F3"
            android:padding="16dp"
            android:gravity="center" />

    </LinearLayout>

</ScrollView>